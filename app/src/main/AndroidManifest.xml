<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="travis.thenewboston.com.thenewboston">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="travis.thenewboston.com.thenewboston.splash"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="travis.thenewboston.com.thenewboston.Menu"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="travis.thenewboston.com.thenewboston.Menu" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity
            android:name="travis.thenewboston.com.thenewboston.startingPoint"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="travis.thenewboston.com.thenewboston.startingPoint" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
